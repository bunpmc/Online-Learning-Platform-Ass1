              <i class="bi bi-house-door"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link nav-link-modern" asp-area="" asp-controller="Course" asp-action="MyCourses">
              <i class="bi bi-book"></i> Courses
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link nav-link-modern" asp-area="" asp-controller="Assessment" asp-action="Start">
              <i class="bi bi-clipboard-check"></i> Assessment
            </a>
          </li>
        </ul>
        
        <ul class="navbar-nav user-menu">
          @if (User.Identity?.IsAuthenticated == true)
          {
            <li class="nav-item">
              <a class="nav-link nav-link-modern" asp-area="" asp-controller="Course" asp-action="List">
                <i class="bi bi-journal-bookmark"></i> My Learning
              </a>
            </li>
            <li class="nav-item">
              <span class="user-welcome">
                <i class="bi bi-person-circle"></i> @User.Identity.Name
              </span>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-link-modern" asp-area="" asp-controller="User" asp-action="Logout">
                <i class="bi bi-box-arrow-right"></i> Logout
              </a>
            </li>
          }
          else
          {
            <li class="nav-item">
              <a class="nav-link nav-link-modern" asp-area="" asp-controller="User" asp-action="Login">
                <i class="bi bi-box-arrow-in-right"></i> Login
              </a>
            </li>
            <li class="nav-item">
              <a class="btn btn-gradient btn-modern" asp-area="" asp-controller="User" asp-action="Register">
                <i class="bi bi-person-plus"></i> Register
              </a>
            </li>
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<!-- Add spacing for fixed navbar -->
<div style="height: 80px;"></div>

<div class="container">
  <main role="main" class="pb-3">
    @if (TempData["SuccessMessage"] != null)
    {
      <div class="alert alert-success-modern alert-dismissible fade show animate-fade-in-down" role="alert">
        <i class="bi bi-check-circle-fill"></i>
        <div>
          <strong>Success!</strong> @TempData["SuccessMessage"]
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
      <div class="alert alert-error-modern alert-dismissible fade show animate-fade-in-down" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <div>
          <strong>Error!</strong> @TempData["ErrorMessage"]
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }
    @RenderBody()
  </main>
</div>

