@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.User.UserDto>

@{
  ViewData["Title"] = "Users";
}

<div class="min-vh-100 bg-light py-5">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h1 class="display-6 fw-bold text-primary mb-2">
              <i class="bi bi-people-fill me-2"></i>Users Directory
            </h1>
            <p class="text-muted">View all registered members</p>
          </div>
          <div>
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-lg rounded-3">
              <i class="bi bi-house-fill me-2"></i>Back to Home
            </a>
          </div>
        </div>
      </div>
    </div>

    @if (Model.Any())
    {
      <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-header bg-primary text-white py-4">
          <h5 class="mb-0">
            <i class="bi bi-table me-2"></i>Total Users: @Model.Count()
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light border-bottom">
                <tr>
                  <th class="ps-4">ID</th>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Role</th>
                  <th class="pe-4">Created At</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var user in Model)
                {
                  <tr class="align-middle">
                    <td class="ps-4">
                      <span class="badge bg-secondary">@user.Id.ToString().Substring(0, 8)...</span>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div
                          class="avatar-circle me-3 bg-primary text-white d-flex align-items-center justify-content-center rounded-circle"
                          style="width: 40px; height: 40px;">
                          <i class="bi bi-person"></i>
                        </div>
                        <span class="fw-semibold">@user.Username</span>
                      </div>
                    </td>
                    <td>
                      <i class="bi bi-envelope me-2 text-primary"></i>
                      <a href="mailto:@user.Email" class="text-decoration-none">@user.Email</a>
                    </td>
                    <td>
                      <span class="badge bg-info text-dark">@user.Role</span>
                    </td>
                    <td class="pe-4">
                      <small class="text-muted">
                        <i class="bi bi-calendar-event me-1"></i>
                        @user.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                      </small>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    }
    else
    {
      <div class="alert alert-info alert-dismissible fade show rounded-4 border-0 shadow-sm" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>
        <strong>No users found.</strong> Be the first to register!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }
  </div>
</div>

<style>
  .avatar-circle {
    font-size: 1.2rem;
  }

  .table tbody tr {
    transition: background-color 0.2s ease;
  }

  .table tbody tr:hover {
    background-color: rgba(13, 110, 253, 0.05);
  }

  .display-6 {
    font-size: 2.5rem;
  }
</style>
