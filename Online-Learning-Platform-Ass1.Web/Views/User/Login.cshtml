@model Online_Learning_Platform_Ass1.Service.DTOs.User.UserLoginDto

@{
  ViewData["Title"] = "Login";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5" style="background: linear-gradient(135deg, var(--primary-50) 0%, var(--gray-50) 100%);">
  <div class="col-md-7 col-lg-5">
    <div class="card card-modern shadow-xl animate-scale-in">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <div class="mb-3">
            <i class="bi bi-mortarboard-fill text-gradient" style="font-size: 3rem;"></i>
          </div>
          <h2 class="card-title mb-2 fw-bold text-gradient">Welcome Back</h2>
          <p class="text-muted">Sign in to continue your learning journey</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
          <div class="alert alert-success-modern alert-dismissible fade show animate-fade-in-down" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            <div>
              @TempData["SuccessMessage"]
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        }

        <form asp-action="Login" method="post" novalidate class="form-modern">
          <div asp-validation-summary="ModelOnly" class="alert alert-error-modern alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <div></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

          <div class="mb-4">
            <label for="UsernameOrEmail" class="form-label fw-semibold">
              <i class="bi bi-person"></i> Username or Email
            </label>
            <input asp-for="UsernameOrEmail" id="UsernameOrEmail" class="form-control form-control-lg"
              placeholder="Enter your username or email" />
            <span asp-validation-for="UsernameOrEmail" class="text-danger small d-block mt-1"></span>
          </div>

          <div class="mb-4">
            <label for="Password" class="form-label fw-semibold">
              <i class="bi bi-lock"></i> Password
            </label>
            <input asp-for="Password" id="Password" type="password" class="form-control form-control-lg"
              placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
          </div>

          <div class="d-grid gap-2 mb-4">
            <button type="submit" class="btn btn-gradient btn-modern btn-lg">
              <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </button>
          </div>

          <div class="divider"></div>

          <div class="text-center">
            <p class="mb-0 text-muted">Don't have an account?
              <a asp-action="Register" class="text-decoration-none fw-semibold" style="color: var(--primary-600);">Create one</a>
            </p>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Back to Home -->
    <div class="text-center mt-4">
      <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none">
        <i class="bi bi-arrow-left"></i> Back to Home
      </a>
    </div>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}