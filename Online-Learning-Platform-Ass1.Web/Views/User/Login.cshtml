@model Online_Learning_Platform_Ass1.Service.DTOs.User.UserLoginDto

@{
  ViewData["Title"] = "Login";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5" style="background-color: #ffffff;">
  <div class="col-md-7 col-lg-5">
    <div class="card border-0 shadow-lg rounded-4">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <h2 class="card-title mb-2 fw-bold text-primary">Welcome Back</h2>
          <p class="text-muted">Sign in to your account</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        }

        <form asp-action="Login" method="post" novalidate>
          <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

          <div class="mb-4">
            <label for="UsernameOrEmail" class="form-label fw-semibold">Username or Email</label>
            <input asp-for="UsernameOrEmail" id="UsernameOrEmail" class="form-control form-control-lg rounded-3"
              placeholder="Enter your username or email" />
            <span asp-validation-for="UsernameOrEmail" class="text-danger small d-block mt-1"></span>
          </div>

          <div class="mb-4">
            <label for="Password" class="form-label fw-semibold">Password</label>
            <input asp-for="Password" id="Password" type="password" class="form-control form-control-lg rounded-3"
              placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
          </div>

          <div class="d-grid gap-2 mb-4">
            <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-semibold">
              <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </button>
          </div>

          <hr class="my-4">

          <div class="text-center">
            <p class="mb-0 text-muted">Don't have an account?
              <a asp-action="Register" class="text-decoration-none fw-semibold text-primary">Create one</a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}