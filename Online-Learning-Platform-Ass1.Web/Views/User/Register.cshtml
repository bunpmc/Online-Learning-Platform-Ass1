@model Online_Learning_Platform_Ass1.Service.DTOs.User.UserRegisterDto

@{
  ViewData["Title"] = "Register";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5" style="background: linear-gradient(135deg, var(--success-50) 0%, var(--gray-50) 100%);">
  <div class="col-md-8 col-lg-6">
    <div class="card card-modern shadow-xl animate-scale-in">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <div class="mb-3">
            <i class="bi bi-person-plus-fill" style="font-size: 3rem; background: var(--gradient-success); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
          </div>
          <h2 class="card-title mb-2 fw-bold" style="color: var(--success-600);">Create Account</h2>
          <p class="text-muted">Join our learning community today</p>
        </div>

        <form asp-action="Register" method="post" novalidate class="form-modern">
          <div asp-validation-summary="ModelOnly" class="alert alert-error-modern alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <div></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>

          <div class="row">
            <div class="col-md-6 mb-4">
              <label for="Username" class="form-label fw-semibold">
                <i class="bi bi-person"></i> Username
              </label>
              <input asp-for="Username" id="Username" class="form-control form-control-lg"
                placeholder="Choose a username" />
              <span asp-validation-for="Username" class="text-danger small d-block mt-1"></span>
              <small class="text-muted d-block mt-1">
                <i class="bi bi-info-circle"></i> At least 3 characters
              </small>
            </div>

            <div class="col-md-6 mb-4">
              <label for="Email" class="form-label fw-semibold">
                <i class="bi bi-envelope"></i> Email Address
              </label>
              <input asp-for="Email" id="Email" type="email" class="form-control form-control-lg"
                placeholder="Enter your email" />
              <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
            </div>
          </div>

          <div class="mb-4">
            <label for="Password" class="form-label fw-semibold">
              <i class="bi bi-lock"></i> Password
            </label>
            <input asp-for="Password" id="Password" type="password" class="form-control form-control-lg"
              placeholder="Create a strong password" />
            <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
            <div class="alert alert-info-modern mt-2 py-2 px-3">
              <small>
                <i class="bi bi-shield-check"></i>
                Password must contain: 8+ characters, uppercase, lowercase, number, special character
              </small>
            </div>
          </div>

          <div class="mb-4">
            <label for="ConfirmPassword" class="form-label fw-semibold">
              <i class="bi bi-lock-fill"></i> Confirm Password
            </label>
            <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password"
              class="form-control form-control-lg" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1"></span>
          </div>

          <div class="d-grid gap-2 mb-4">
            <button type="submit" class="btn btn-modern btn-lg" style="background: var(--gradient-success); color: white; border: none;">
              <i class="bi bi-person-plus-fill me-2"></i>Create Account
            </button>
          </div>

          <div class="divider"></div>

          <div class="text-center">
            <p class="mb-0 text-muted">Already have an account?
              <a asp-action="Login" class="text-decoration-none fw-semibold" style="color: var(--primary-600);">Sign in</a>
            </p>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Back to Home -->
    <div class="text-center mt-4">
      <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none">
        <i class="bi bi-arrow-left"></i> Back to Home
      </a>
    </div>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
