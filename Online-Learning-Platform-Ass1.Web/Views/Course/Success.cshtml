@{
    ViewData["Title"] = "Purchase Successful";
}

<div class="container mt-5 text-center">
    <div class="card py-5 shadow-sm">
        <div class="card-body">
            <h1 class="display-4 text-success mb-3"><i class="bi bi-check-circle-fill"></i> Success!</h1>
            <p class="lead">Thank you for your purchase.</p>
            <p>Order ID: <strong>@ViewBag.OrderId</strong></p>
            
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Browse More Courses</a>
                <!-- Link to My Learning can be added later -->
            </div>
        </div>
    </div>
</div>
