@model Online_Learning_Platform_Ass1.Service.DTOs.Course.CourseDetailViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <!-- Course Header -->
        <div class="col-lg-8">
            <h1 class="display-5">@Model.Title</h1>
            <p class="lead">@Model.Description</p>
            <div class="d-flex align-items-center mb-4">
                <span class="badge bg-info me-2">@Model.CategoryName</span>
                <span class="text-muted">Instructor: @Model.InstructorName</span>
            </div>

            <!-- Course Content (Modules) -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Course Content</h4>
                </div>
                <div class="list-group list-group-flush">
                    @if (Model.Modules != null && Model.Modules.Any())
                    {
                        foreach (var module in Model.Modules)
                        {
                            <div class="list-group-item">
                                <h5 class="mb-1">@module.Title</h5>
                                <ul class="list-unstyled ms-3">
                                    @foreach (var lesson in module.Lessons)
                                    {
                                        <li>
                                            <i class="bi bi-play-circle me-2"></i> @lesson.Title
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="list-group-item">No content available yet.</div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar (Action) -->
        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title">
                }
                <div class="card-body">
                    <h3 class="card-title text-center text-primary mb-3">@Model.Price.ToString("C")</h3>
                    <div class="d-grid gap-2">
                        @if (Model.IsEnrolled)
                        {
                            <a href="#" class="btn btn-success btn-lg">Start Learning</a>
                        }
                        else if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-action="Checkout" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">Enroll Now</a>
                        }
                        else
                        {
                            <a asp-controller="User" asp-action="Login" asp-route-returnUrl="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-primary btn-lg">Login to Enroll</a>
                        }
                    </div>
                    <hr />
                    <ul class="list-unstyled">
                        <li><small>Make sure to read our refund policy.</small></li>
                        <!-- Add more features like "Full lifetime access", "Certificate" etc. -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
