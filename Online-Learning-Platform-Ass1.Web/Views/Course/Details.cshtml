@model Online_Learning_Platform_Ass1.Service.DTOs.Course.CourseDetailViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5 mb-5">
    <div class="row">
        <!-- Course Header -->
        <div class="col-lg-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>

            <div class="scroll-reveal">
                <h1 class="display-5 fw-bold mb-3">@Model.Title</h1>
                <p class="lead text-muted mb-4">@Model.Description</p>
                
                <div class="d-flex align-items-center gap-3 mb-4 flex-wrap">
                    <span class="badge badge-gradient-primary">@Model.CategoryName</span>
                    <div class="d-flex align-items-center text-muted">
                        <i class="bi bi-person-circle me-2"></i>
                        <span>Instructor: <strong>@Model.InstructorName</strong></span>
                    </div>
                </div>
            </div>

            <!-- Course Content (Modules) -->
            <div class="card card-modern shadow-lg mb-4 scroll-reveal">
                <div class="card-header" style="background: var(--gradient-primary); color: white;">
                    <h4 class="mb-0">
                        <i class="bi bi-list-ul me-2"></i>Course Content
                    </h4>
                </div>
                <div class="list-group list-group-flush">
                    @if (Model.Modules != null && Model.Modules.Any())
                    {
                        @for (int i = 0; i < Model.Modules.Count; i++)
                        {
                            var module = Model.Modules[i];
                            var moduleId = $"module-{i}";
                            
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="mb-0 fw-bold">
                                        <i class="bi bi-folder2-open text-primary me-2"></i>
                                        @module.Title
                                    </h5>
                                    <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#@moduleId">
                                        <i class="bi bi-chevron-down"></i>
                                    </button>
                                </div>
                                
                                <div class="collapse show" id="@moduleId">
                                    <ul class="list-unstyled ms-4 mt-3">
                                        @foreach (var lesson in module.Lessons)
                                        {
                                            <li class="mb-2 d-flex align-items-center">
                                                <i class="bi bi-play-circle-fill text-success me-2"></i>
                                                <span>@lesson.Title</span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="list-group-item text-center py-5 text-muted">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-3 mb-0">No content available yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar (Action) -->
        <div class="col-lg-4">
            <div class="card card-modern shadow-xl sticky-top scroll-reveal" style="top: 100px;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="position-relative overflow-hidden" style="height: 200px;">
                        <img src="@Model.ImageUrl" class="w-100 h-100 object-fit-cover" alt="@Model.Title">
                        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.3) 100%);"></div>
                    </div>
                }
                else
                {
                    <div class="position-relative overflow-hidden" style="height: 200px; background: var(--gradient-primary);">
                        <div class="d-flex align-items-center justify-content-center h-100">
                            <i class="bi bi-book text-white" style="font-size: 4rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                }
                
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="text-gradient mb-0">@Model.Price.ToString("C")</h2>
                        <small class="text-muted">One-time payment</small>
                    </div>
                    
                    <div class="d-grid gap-2 mb-4">
                        @if (Model.IsEnrolled)
                        {
                            <a asp-action="Learn" asp-route-id="@Model.Id" class="btn btn-modern btn-lg" style="background: var(--gradient-success); color: white; border: none;">
                                <i class="bi bi-play-circle-fill me-2"></i>Start Learning
                            </a>
                        }
                        else if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-action="Checkout" asp-route-id="@Model.Id" class="btn btn-gradient btn-modern btn-lg">
                                <i class="bi bi-cart-plus-fill me-2"></i>Enroll Now
                            </a>
                        }
                        else
                        {
                            <a asp-controller="User" asp-action="Login" asp-route-returnUrl="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-primary btn-modern btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login to Enroll
                            </a>
                        }
                    </div>
                    
                    <div class="divider"></div>
                    
                    <div class="mt-4">
                        <h6 class="fw-bold mb-3">This course includes:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Full lifetime access
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Certificate of completion
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Access on mobile and desktop
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                30-day money-back guarantee
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
