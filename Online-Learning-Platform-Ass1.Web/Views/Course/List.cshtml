@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.Course.CourseDTO>

@{
	ViewData["Title"] = "Danh sách khóa học";
}

<h2 class="mb-4">Danh sách khóa học</h2>

@if (!Model.Any())
{
	<p>Chưa có khóa học nào.</p>
}
else
{
	<div class="row">
		@foreach (var course in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card h-100 shadow-sm">
					<img src="@course.PictureUrl"
						 class="card-img-top"
						 style="height:180px; object-fit:cover;" />

					<div class="card-body d-flex flex-column">
						<h5 class="card-title">@course.Title</h5>
						<p class="text-muted mb-2">@course.Author</p>
						<p class="card-text flex-grow-1">
							@course.Description
						</p>

						<a href="@Url.Action("Learn", "Course", new { courseId = course.Id })"
						   class="btn btn-primary mt-auto">
							Vào học
						</a>
					</div>
				</div>
			</div>
		}
	</div>
}
